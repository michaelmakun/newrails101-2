<div class="col-md-12">

  <h2 class="text-center">我发表的文章</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Group Name</th>
        <th>Last Update</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to(post.title, group_post_path(post.group,post)) %></td>
          <td><%= post.group.title %></td>
          <td><%= post.updated_at %></td>
          <td><%= link_to("编缉", edit_group_post_path(post.group,post), class: "btn btn-primary btn-xs")%></td>
          <td><%= link_to("删除", group_post_path(post.group,post), method: :delete, data: { confirm: "Are you sure"}, class: "btn btn-danger btn-xs")%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center col-md-12 pagination">
    <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
  </div>
</div>
